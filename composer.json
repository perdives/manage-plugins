{
    "name": "perdives/manage-plugins",
    "description": "Manage which WordPress plugins are allowed to run. Control plugin activation through configuration with support for environment-based rules and global settings.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Perdives",
            "homepage": "https://perdives.com"
        }
    ],
    "homepage": "https://perdives.com/plugins/manage-plugins",
    "require": {
        "php": ">=7.4",
        "perdives/php-support-notices-for-wordpress": "dev-main",
        "yahnis-elsts/plugin-update-checker": "^5.4"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "perdives/coding-standards": "dev-main",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Perdives\\ManagePlugins\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Perdives\\ManagePlugins\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "phpcs:check": "phpcs --standard=phpcs.xml.dist",
        "phpcs:fix": "phpcbf --standard=phpcs.xml.dist",
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html tests/_output/coverage",
        "post-install-cmd": [
            "@php -r \"if (file_exists('vendor/bin/phpcs') && !file_exists('phpcs.xml')) { echo 'Run composer setup-phpcs to configure PHPCS\\n'; }\""
        ],
        "setup-phpcs": [
            "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcompatibility/phpcompatibility-wp",
            "phpcs --config-set default_standard WordPress"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/perdives/php-support-notices-for-wordpress.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/perdives/perdives-coding-standards"
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true,
        "optimize-autoloader": true,
        "classmap-authoritative": false,
        "platform": {
            "php": "7.4.0"
        },
        "platform-check": false
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
